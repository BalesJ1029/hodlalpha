<style>
  .video-band {
    position: relative;
    min-height: 300px;
    overflow: hidden;
  }
  .video-band video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(110%);
  }
  .video-band .overlay {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 300px;
    text-align: center;
  }
  .video-band__heading {
    background: rgba(11, 10, 10, 0.52);
    padding: clamp(24px, 4vw, 36px);
    border-radius: calc(var(--radius) * 1.5);
    backdrop-filter: blur(6px);
  }
</style>
