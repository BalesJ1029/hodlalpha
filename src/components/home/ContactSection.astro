<section id="contact" class="section band">
  <div class="container contact-grid">
    <div>
      <div class="badge">Contact Us</div>
      <h2 class="h2" style="margin-top:6px;">Connect With HODL Alpha</h2>
    </div>
    <div>
      <p class="muted" style="margin:0;">Reach us at support:</p>
      <p style="margin:6px 0 0 0; font-size:1.25rem;">
        <a href="mailto:support@hodlalpha.io">support@hodlalpha.io</a>
      </p>
    </div>
  </div>
</section>

<style>
  .band {
    background: #121212;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }
  .contact-grid {
    display: grid;
    gap: 18px;
    grid-template-columns: 1fr auto;
    align-items: center;
  }
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
