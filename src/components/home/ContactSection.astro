<section id="contact" class="section band">
  <div class="container contact-grid">
    <div class="contact-copy">
      <header class="section-heading section-heading--left section-heading--compact">
        <span class="section-eyebrow">Contact us</span>
        <h2 class="section-title">Connect with HODL Alpha</h2>
        <p class="section-summary">
          Have questions about the membership, signals, or onboarding? Reach out and the team will
          be in touch.
        </p>
      </header>
    </div>
    <div class="contact-actions">
      <p class="muted">Reach the support desk:</p>
      <p class="contact-email">
        <a href="mailto:support@hodlalpha.io">support@hodlalpha.io</a>
      </p>
    </div>
  </div>
</section>

<style>
  .band {
    background: #121212;
    border-top: 1px solid var(--border);
    border-bottom: 1px solid var(--border);
  }
  .contact-grid {
    display: grid;
    gap: 18px;
    grid-template-columns: 1fr auto;
    align-items: center;
  }
  .contact-actions {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: flex-start;
  }
  .contact-actions .muted {
    margin: 0;
  }
  .contact-email {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
  }
  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
    .contact-actions {
      align-items: flex-start;
    }
  }
</style>
