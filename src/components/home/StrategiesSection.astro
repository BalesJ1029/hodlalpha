<style>
  .strategies-section {
    position: relative;
    margin-top: -100px;
  }
  .strategies-intro {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 18px;
  }
  .strategies-subtitle {
    margin-top: 12px;
    line-height: 1.7;
  }
  .strategies-grid {
    margin-top: clamp(32px, 5vw, 56px);
    gap: clamp(24px, 3vw, 36px);
  }
  .strategy-card {
    border-radius: calc(var(--radius) * 1.25);
    border: 1px solid rgba(255, 255, 255, 0.08);
    padding: clamp(28px, 4vw, 40px);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    gap: 24px;
    box-shadow: 0 18px 40px rgba(0, 0, 0, 0.2);
  }
  .strategy-card::before {
    content: '';
    position: absolute;
    inset: -30% 50% auto -30%;
    height: 120%;
    opacity: 0.7;
    pointer-events: none;
  }
  .strategy-card:nth-child(2)::before {
    inset: -30% -30% auto 50%;
  }
  .strategy-card__header {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .strategy-card__badge {
    align-self: flex-start;
    padding: 6px 14px;
    border-radius: 999px;
    background: #f1cd70;
    color: #0b0a0a;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-weight: 700;
  }
  .strategy-card__header .muted {
    max-width: 360px;
  }
  .strategy-card__list {
    position: relative;
    z-index: 1;
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .strategy-card__list li {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 14px;
    align-items: start;
    padding: 14px 16px;
    border-radius: calc(var(--radius) * 0.75);
    background: #202020;
    border: 1px solid rgba(255, 255, 255, 0.06);
  }
  .strategy-card__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 999px;
    background: rgba(32, 196, 135, 0.18);
    color: rgb(32, 196, 135);
    flex-shrink: 0;
  }
  .strategy-card__icon svg {
    width: 18px;
    height: 18px;
  }
  .strategy-card__text {
    display: flex;
    flex-direction: column;
    gap: 4px;
    font-size: 0.95rem;
  }
  .strategy-card__label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: rgba(255, 255, 255, 0.65);
  }
  .strategy-card__text span:last-child {
    color: rgba(255, 255, 255, 0.95);
    font-weight: 500;
  }
  .strategies-cta {
    margin-top: clamp(28px, 4vw, 48px);
  }
  .strategies-cta__btn {
    padding: 16px 28px;
  }
  @media (max-width: 720px) {
    .strategies-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
