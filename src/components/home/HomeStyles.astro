<style is:global>
  .section {
    padding: clamp(48px, 4vw, 72px) 0;
  }
  .section-tight {
    padding: clamp(32px, 3.5vw, 56px) 0;
  }
  .section-heading {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: clamp(10px, 1vw, 18px);
    margin: 0 auto clamp(32px, 4vw, 48px);
    max-width: min(760px, 95%);
  }
  .section-heading--left {
    align-items: flex-start;
    text-align: left;
  }
  .section-heading--compact {
    margin-bottom: clamp(24px, 3vw, 32px);
  }
  .section-eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.18em;
    font-weight: 700;
    font-size: 0.78rem;
    color: var(--accent);
  }
  .clean {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .h2 {
    font-size: clamp(1.8rem, 1.3rem + 2vw, 2.6rem);
    line-height: 1.15;
    letter-spacing: -0.01em;
  }
  .h3 {
    font-size: clamp(1.25rem, 1.05rem + 0.9vw, 1.6rem);
    margin: 6px 0 12px;
  }
  .section-title {
    font-size: clamp(2rem, 1.4rem + 2.2vw, 3rem);
    line-height: 1.15;
    letter-spacing: -0.02em;
    margin: 0;
  }
  .section-summary {
    margin: 0;
    color: var(--muted);
    line-height: 1.65;
    max-width: 680px;
    margin-inline: auto;
  }
  .section-heading--left .section-summary {
    margin-inline: 0;
  }
  .center {
    text-align: center;
  }
  .badge {
    color: var(--accent);
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.03em;
    font-size: 0.85rem;
  }
  .grid {
    display: grid;
    gap: clamp(16px, 2.5vw, 24px);
  }
  .grid-2 {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
  .grid-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
  }
  @media (max-width: 1024px) {
    .grid-2,
    .grid-3 {
      grid-template-columns: 1fr;
    }
  }
  .gradient-underline {
    position: relative;
    display: inline-block;
  }
  .gradient-underline::after {
    content: '';
    display: block;
    height: 6px;
    margin-top: 0.18em;
    border-radius: 999px;
    background: linear-gradient(90deg, var(--accent), var(--accent-hover));
    background-size: 200% 100%;
    animation: slide 3s linear infinite;
  }
  @keyframes slide {
    to {
      background-position: 200% 0;
    }
  }
</style>
